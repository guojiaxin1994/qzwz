  "exercise_categories": {
    "热身活动": {
      "description": "训练前进行5-10分钟的热身，旨在提高心率、体温和关节灵活性，有效预防运动损伤。",
      "exercises": [
        {
          "name": "",
          "method": "",
          "requirement": "",
          "notes": "",
          "imageUrl": "",
          "videoUrl": "https://www.bilibili.com/video/BV1pt421u773?t=23.9"
        }
      ]
    },
    "上肢力量": {
      "description": "增强肩、胸、背、臂部力量，改善体态。可使用哑铃、弹力带或装满水的瓶子作为替代器械。",
      "exercises": [
        {
          "name": "标准/跪姿俯卧撑",
          "method": "双手略宽于肩，身体呈一条直线，核心收紧，屈肘至胸部接近地面后推起。",
          "requirement": "8-15次/组 * 3-4组，组间休息60秒",
          "notes": "根据自身能力选择难度，保证动作标准。",
          "imageUrl": "",
          "videoUrl": "https://m.douban.com/note/695550399/"
        },
        {
          "name": "弹力带/水瓶划船",
          "method": "俯身，背部挺直，单手持重物或弹力带，沿体侧将重物提至腹部，感受背部肌肉收缩。",
          "requirement": "10-15次/侧 * 3组，组间休息60秒",
          "notes": "关注背部发力，而非手臂。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "派克俯卧撑",
          "method": "从俯卧撑起始位，将臀部抬高，身体呈倒V形，头顶朝下进行俯卧撑，主要锻炼肩部。",
          "requirement": "6-12次/组 * 3组，组间休息60秒",
          "notes": "是倒立撑的基础练习，注意安全。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "下肢与功能性力量": {
      "description": "发展腿部和臀部力量，提高运动表现和日常活动能力。",
      "exercises": [
        {
          "name": "自重深蹲",
          "method": "双脚与肩同宽，脚尖微朝外，挺胸收腹，臀部后坐下蹲至大腿与地面平行或更低。",
          "requirement": "15-20次/组 * 3-4组，组间休息60秒",
          "notes": "保持膝盖与脚尖方向一致，重心在足中。",
          "imageUrl": "",
          "videoUrl": "https://www.youtube.com/watch?v=REjznoKN8Q8"
        },
        {
          "name": "弓步走",
          "method": "向前迈出一大步，身体垂直下蹲，前后腿膝盖均呈90度，后腿膝盖不触地，然后交替换边前进。",
          "requirement": "每侧10-12步/组 * 3组，组间休息60秒",
          "notes": "保持上半身稳定，核心收紧。",
          "imageUrl": "",
          "videoUrl": "https://www.youtube.com/watch?v=U_638geC90o"
        },
        {
          "name": "臀桥",
          "method": "仰卧，屈膝，双脚踩地。臀部发力向上抬起，使身体从肩到膝呈一条直线，顶峰收缩臀部。",
          "requirement": "15-20次/组 * 3组，组间休息45秒",
          "notes": "感受臀部肌肉的发力感。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "核心与平衡": {
      "description": "强化腹、背、臀等核心肌群，提升身体稳定性与平衡能力。",
      "exercises": [
        {
          "name": "平板支撑及变式",
          "method": "肘或手支撑，身体呈直线，核心收紧。可尝试交替抬手/脚增加难度。",
          "requirement": "坚持30-60秒/组 * 3组，组间休息30秒",
          "notes": "避免塌腰或撅臀。",
          "imageUrl": "",
          "videoUrl": "https://www.youtube.com/watch?v=YtFrzTIOkqQ"
        },
        {
          "name": "鸟狗式",
          "method": "四足跪姿，对侧手脚同时缓慢伸直，与身体呈一条直线，保持稳定后还原。",
          "requirement": "每侧10-12次/组 * 3组，组间休息30秒",
          "notes": "动作要慢而有控制，骨盆保持中立。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "单腿站立",
          "method": "单腿站立，另一腿抬起，尝试闭眼或在不平稳表面（如枕头）上进行以增加难度。",
          "requirement": "每侧坚持30-60秒/组 * 2-3组",
          "notes": "有助于提高脚踝稳定性。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "耐力与心肺": {
      "description": "提升心肺功能和持续运动能力，夏季首选游泳，或在凉爽时段进行户外跑步。",
      "exercises": [
        {
          "name": "游泳",
          "method": "选择蛙泳、自由泳等泳姿，保持均匀速度持续游动。",
          "requirement": "持续20-40分钟",
          "notes": "最佳夏季运动，解暑且全身锻炼。注意安全，选择正规场馆。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "间歇跑 (户外/跑步机)",
          "method": "慢跑5分钟热身。然后进行8-10组（快速跑1分钟，慢跑或快走2分钟）。最后慢跑5分钟放松。",
          "requirement": "总时长约30分钟",
          "notes": "务必在清晨或傍晚凉爽时进行，并充分补水。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "跳绳",
          "method": "以中等速度连续跳绳，可加入双摇跳等花样增加强度。",
          "requirement": "跳3分钟，休息1分钟，重复5-8次",
          "notes": "高效的心肺训练，对场地要求低。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "速度与敏捷": {
      "description": "提高身体快速启动、变向和反应的能力。",
      "exercises": [
        {
          "name": "敏捷梯/标志物训练",
          "method": "如果没有敏捷梯，可在地面画格子。进行前后跳、侧向滑步、Icky Shuffle等步伐训练。",
          "requirement": "每个动作2-4遍/组 * 3组",
          "notes": "要求脚步轻快、节奏感强。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "折返跑",
          "method": "设置两个相距10-20米的标志物，进行全力冲刺和快速转身的往返跑。",
          "requirement": "4-6趟/组 * 3-4组，组间充分休息",
          "notes": "重点是降低重心、快速变向。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "协调性训练": {
      "description": "改善身体各部位协同工作的能力，提升运动表现。",
      "exercises": [
        {
          "name": "对墙抛接球",
          "method": "使用网球或类似的球，单手或双手对墙抛接，可变换距离和角度。",
          "requirement": "持续5-10分钟",
          "notes": "锻炼手眼协调性。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "花式跳绳",
          "method": "练习交叉跳、单脚跳、高抬腿跳等不同节奏和动作的跳绳。",
          "requirement": "尝试不同动作，总计10分钟",
          "notes": "提升节奏感和身体协调。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "柔韧与放松": {
      "description": "训练后进行静态拉伸，有助于缓解肌肉紧张，促进恢复，提高身体柔韧性。",
      "exercises": [
        {
          "name": "全身静态拉伸",
          "method": "依次拉伸大腿前侧（股四头肌）、后侧（腘绳肌）、小腿、臀部、胸部、肩部和背部。",
          "requirement": "每个部位拉伸至有轻微牵拉感即可，保持20-30秒，进行2次",
          "notes": "呼吸平稳，不要憋气，避免疼痛。",
          "imageUrl": "",
          "videoUrl": ""
        },
        {
          "name": "瑜伽/泡沫轴放松",
          "method": "进行基础的瑜伽体式（如下犬式、猫牛式）或使用泡沫轴滚动放松主要肌群。",
          "requirement": "总时长10-15分钟",
          "notes": "深度放松，有助于缓解因学业和训练带来的压力。",
          "imageUrl": "",
          "videoUrl": ""
        }
      ]
    },
    "低强度有氧（如散步、骑行30分钟）": {
      "description": "进行30分钟左右的低强度有氧活动，如快走、轻松骑行或游泳，促进积极性恢复。\\",
      "exercises": []
    },
    "休息，确保充足睡眠和营养": {
      "description": "身体恢复和成长的关键。确保充足睡眠，均衡饮食，为下一周的训练储备能量。",
      "exercises": []
    }
  },
